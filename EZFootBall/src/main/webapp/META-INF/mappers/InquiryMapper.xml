<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sample.dao.InquiryDAO">
	
	<select id="InquiryAll" resultType="inquiryVO">
		SELECT * FROM inquiry
	</select>
	
	<select id="InquiryList" resultType="inquiryVO">
		SELECT * FROM inquiry
		WHERE user_code = #{userCode}
	</select>
	
	<!-- 문의 작성 -->
	<insert id="InquiryAdd">
		INSERT INTO inquiry (inquiry_title, inquiry_content, inquiry_state, create_date, userCode)
		VALUES(#{inquiryTitle}, #{inquiryContent}, #{inquiryState}, #{createDate}, #{userCode})
	</insert>
	
</mapper>